{
    "version": "0.1",
    "language": "de-DE",
    "enabledLanguageIds": [
        "markdown",
        "yaml",
        "latex",
        "bibtex"
    ],
    "languageSettings": [
        {
            "languageId": "markdown",
            "ignoreRegExpList": [
                // pandoc references
                "\\[(@|\\^).+\\]"
            ]
        },
        {
            "languageId": "bibtex",
            "ignoreRegExpList": [
                // reference definition
                "@.+?\\{.+?,",
                "^.+?="
            ]
        }
    ],
    "ignorePaths": [
        ".vscode",
        "pandoc",
        "output-tex"
    ],
    "words": [
        "DHBW"
    ]
}
